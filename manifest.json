{
    "name": "ZenTabs - Tab Manager",
    "version": "1.0",
    "description": "Organize your browsing experience by exporting and importing URLs of tabs to text and sorting them.",
	"manifest_version": 3,

	"permissions": ["tabs", "activeTab", "scripting"],

    "icons": {
        "16": "16icon.png",
        "48": "48icon.png",
        "128": "128icon.png"
    },

    "action": {
        "default_icon": "48icon.png",
        "default_title": "Export Tabs",
        "default_popup": "popup.html"
    },

    "background": {
        "service_worker": "background.js"
    },

    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}